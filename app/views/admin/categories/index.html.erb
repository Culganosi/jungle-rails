<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>



  <div class="panel panel-default categories">

    <table class="table table-bordered">
      <thead>
        <tr>
        <th>Name</th>
        <th>Category</th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>

  <div class="well">
    <%= link_to '+ Add a New Category', [:new, :admin, :category], class: 'btn btn-success' %>
    </div>
  </div>

</section>
